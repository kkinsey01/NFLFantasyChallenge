@section Scripts {
    <script src="~/js/Admin/EditScores.js"></script>
}

<style>
    .w-40 {
        width: 40%;
    }

    .w-60 {
        width: 60%;
    }
</style>

<div class="mx-auto">
    <h5>Edit Player Scores</h5>
    <div class="d-flex mt-3">
        <div class="d-flex gap-2 align-items-center">
            <span class="fw-bold">Team:</span>
            <select id="EditPlayerTeamSelector" class="form-select in-bg p-2" style="width: 80px;">
                <!-- Fill in via JS -->
            </select>
        </div>       
        <div class="d-flex gap-2 align-items-center ms-4">
            <span class="fw-bold">Week:</span>
            <select id="EditPlayerWeekSelector" class="form-select in-bg p-2" style="width: 130px;">
                <!-- Fill in via JS -->
            </select>
        </div>
        <div class="d-flex align-items-center ms-2">
            <button id="SearchPlayerListBtn" class="btn btn-success">GO</button>
        </div>
    </div>

    <div id="PlayerBody" class="d-flex flex-column mt-4">

    </div>

    <div id="BottomControls" class="">
        <div class="d-flex">
            <div>
                <button id="SetScoresToZero" class="btn btn-warning">Set Scores to Zero</button>
            </div>
            <div class="ms-auto me-3">
                <button id="SaveChangesButton" class="btn btn-success">Save Changes</button>
            </div>
        </div>              
    </div>
</div>

<template id="PositionTemplate">
    <div>
        <h5 class="player-position"></h5>
    </div>    
</template>

<template id="PlayerContainerTemplate">
    <div class="d-flex flex-column ms-4 mt-2">       
    </div>
</template>

<template id="PlayerEntryTemplate">
    <div class="d-flex gap-2 align-items-center mb-2">
        <div class="w-60">
            <span class="player-name"></span>
        </div>
        <div class="w-40 d-flex">
            <input class="form-control in-bg player-score" type="number" style="width: 65px;"/>
            <div class="d-flex align-items-center ms-2">
                Points
            </div>
        </div>
    </div>
</template>

<template id="DividerTemplate">
    <hr />
</template>