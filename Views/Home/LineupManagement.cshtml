@section Scripts {
    <script src="~/js/LineupManagement.js"></script>
}

<div class="mx-auto">
    <h5>Manage lineup</h5>

    <div class="d-flex">
        <h5 id="UserFullName"></h5>
        <button id="LockLineup" class="btn btn-warning ms-4">Lock Lineup</button>
    </div>    

    <div id="LineupBody">

    </div>
</div>

<div id="AddPlayerModal" class="modal fade" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5>Add Player</h5>
            </div>
            <div class="modal-body">
                <div class="d-flex gap-2">
                    <input id="SearchPlayerNames" class="form-control in-bg" type="search" placeholder="Search.." />
                    <select id="TeamSearchFilter" class="form-select in-bg" style="width: 80px;">
                    </select>
                </div>
                <div id="AddPlayerOptionBody" class="mt-4" style="max-height: 60vh; overflow-y: auto;">

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>                
            </div>
        </div>
    </div>
</div>

<div id="ViewPlayerModal" class="modal fade" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5>View Player's scores for each week of playoffs:</h5>
            </div>
            <div class="modal-body">  
                <div class="d-flex gap-2">
                    <span id="ViewPlayerName"></span>
                    <span id="ViewPlayerTeam" class="ms-2"></span>
                </div>                                
                <div class="mt-3">
                    <div class="d-flex gap-2">
                        <span class="fw-bold">Wildcard</span>
                        <span id="ViewPlayerWildCardScore"></span>
                    </div>
                    <div class="d-flex gap-2">
                        <span class="fw-bold">Divisonal</span>
                        <span id="ViewPlayerDivisionalScore"></span>
                    </div>
                    <div class="d-flex gap-2">
                        <span class="fw-bold">Conference</span>
                        <span id="ViewPlayerConferenceScore"></span>
                    </div>
                    <div class="d-flex gap-2">
                        <span class="fw-bold">Super Bowl</span>
                        <span id="ViewPlayerSuperBowlScore"></span>
                    </div>

                    <div class="d-flex gap-2 mt-4">
                        <span class="fw-bold">Total Score: </span>
                        <span id="ViewPlayerTotalScore"></span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="CloseViewModalBtn" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<template id="PositionTemplate">
    <div>
        <h5 class="player-position"></h5>
    </div>
</template>

<template id="PlayerContainerTemplate">
    <div class="d-flex flex-column ms-4 mt-2">
    </div>
</template>

<template id="PlayerTemplate">
    <div class="d-flex gap-2 align-items-center mb-2">
        <div class="d-flex align-items-center" style="width:250px;">
            <input class="form-control in-bg player-name" type="text" style="width: 200px;" disabled/>
            <span class="fw-bold mx-2 player-team"></span>
        </div>
        <div class="d-flex">
            <button class="btn btn-success add-player-btn" style="width:85px;">Add</button>
            <button class="btn btn-info view-player-btn" style="width:85px;">View</button>
            <button class="btn btn-danger remove-player-btn" style="width:85px;">Remove</button>
        </div>
    </div>
</template>

<div id="OptionTemplate" style="display: none;">
    <option class="in-bg p-2"></option>
</div>

<template id="AddPlayerTemplate">
    <div class="d-flex gap-2 mt-4">
        <h6 class="add-player-name"></h6>
        <div class="ms-auto me-2">
            <button class="confirm-add-player-btn btn btn-success">Add</button>
        </div>        
    </div>
</template>