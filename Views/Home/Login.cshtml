@section Scripts {
    <script src="~/js/Login.js"></script>
}

<div class="mx-auto">
    <div class="card">
        <h5 class="card-header">Login</h5>
        <div class="card-body">
            <form id="LoginForm">
                <div class="d-flex flex-column">
                    <p class="card-text">Username</p>
                    <input id="LoginUsername" class="form-control" type="text" placeholder="Username" required />
                </div>
                <div class="d-flex flex-column mt-3">
                    <p class="card-text">Password</p>
                    <input id="LoginPassword" class="form-control" type="password" placeholder="Password" required/>
                </div>
                <div class="mt-3">
                    <button id="LoginSubmitBtn" class="btn btn-success" type="submit">Submit</button>
                </div>
            </form>            
        </div>
    </div>
</div>