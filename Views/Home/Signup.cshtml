@section Scripts {
    <script src="~/js/Signup.js"></script>
}

<div class="mx-auto">
    <div class="card">
        <h5 class="card-header">Signup</h5>
        <div class="card-body">
            <form id="SignupForm">
                <div class="d-flex flex-column">
                    <p class="card-text">Full Name</p>
                    <input id="SignupFullName" class="form-control in-bg" type="text" placeholder="Full Name" required />
                </div>
                <div class="d-flex flex-column mt-3">
                    <p class="card-text">Username</p>
                    <input id="SignupUsername" class="form-control in-bg" type="text" placeholder="Username" required />
                </div>
                <div class="d-flex flex-column mt-3">
                    <p class="card-text">Phone Number (optional)</p>
                    <input id="SignupPhoneNumber" class="form-control in-bg" type="text" placeholder="123-456-7890" />
                </div>
                <div class="d-flex flex-column mt-3">
                    <p class="card-text">Password</p>
                    <input id="SignupPassword" class="form-control in-bg" type="password" placeholder="Password" required />
                </div>
                <div class="d-flex flex-column mt-3">
                    <p class="card-text">Confirm Password</p>
                    <input id="SignupConfirmPassword" class="form-control in-bg" type="password" placeholder="Password" required />
                </div>

                <div class="d-flex gap-3 mx-auto mt-3">
                    <button id="SignupFormSubmit" class="btn btn-success" type="submit">Signup</button>
                    <button id="SignupFormCancel" class="btn btn-danger">Cancel</button>
                </div>
            </form>            
        </div>
    </div>
</div>